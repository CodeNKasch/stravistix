{
	"manifest_version": 2,
	"name": "StravistiX for Strava",
	"short_name": "StravistiX",
	"description": "Enhance your Strava experience with StravistiX. An opensource web plugin which analyse deeper your activities and segments efforts !",
	"version": "6.1.2",
	"version_name": "6.1.2 Stable",
	"background": {
		"scripts": [
			"core/installer.js",
			"core/background.js"
		]
	},
	"content_scripts": [
		{
			"js": [
				"core/content.js"
			],
			"run_at": "document_end",
			"matches": [
				"*://www.strava.com/*",
				"*://app.strava.com/*"
			]
		}
	],
	"icons": {
		"16": "core/icons/16.png",
		"48": "core/icons/48.png",
		"128": "core/icons/128.png"
	},
	"options_page": "app/index.html",
	"content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self'",
	"permissions": [
		"*://www.strava.com/*",
		"*://app.strava.com/*",
		"storage",
		"unlimitedStorage"
	],
	"web_accessible_resources": [
		"core/*",
		"app/*"
	],
	"externally_connectable": {
		"matches": [
			"*://*.strava.com/*"
		]
	}
}
